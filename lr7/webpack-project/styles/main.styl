/* Загальні стилі */

body {
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
    background: linear-gradient(to bottom right, #BDF400, #98B72E, #7B9E00, #CFF93E, #DBF970);
}

.hobby-section {
    margin-top: 20px; 
}

.center {
    text-align: center;
}

.center img {
    display: block;
    margin: 0 auto;
}

.container {
  max-width: 1200px; 
  margin: 0 auto; 
  padding: 20px; 
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

header {
    background-color: #7B9E00; 
    padding: 10px; 
}

nav ul {
  list-style-type: none;
  padding: 0;
  margin: 0;
}

nav ul li {
  display: inline;
  margin-right: 10px;
}

nav ul li a {
    text-decoration: none;
    color: #DBF970; 
}

section {
  margin-top: 20px; 
  background-color: #7B9E00; 
  color: white; 
  padding: 20px; 
}

footer {
    margin-top: auto;
    background-color: #7B9E00; 
    color: white;
    text-align: center;
    padding: 10px 0;
}

th,
td {
    color: #DBF970;
    border: 1px solid black;
    padding: 8px;
    text-align: left;
    background-color: #7B9E00;
}

h1,
h2,
h3,
h4,
h5,
h6 {
    color: #BDF400; 
}

a {
    color: #98B72E; 
}

a:hover {
    text-decoration: underline;
}

p {
    color: #DBF970; 
}

caption {
    color: #DBF970; 
}

.button {
    background-color: #000;
    color: #000; 
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

.button:hover {
    background-color: #DBF970; 
}


@media screen and (max-width: 768px) {
  .container {
    width: 90%; 

  header {
    height: auto; 
  }

  nav {
    flex-direction: column; 
    align-items: center; 
  }

  nav ul li {
    display: block; 
    margin-bottom: 10px; 
  }
}


#ie-warning {
    display: none;
    color: red; 
}


@media all and (-ms-high-contrast: none), (-ms-high-contrast: active) {
    #ie-warning {
        display: block; 
    }
}
